ng-virtual
    div
        .repetition-title
            .info(ng-show="hasDescription()")
                .info_popup(ng-bind-html="getQuestionCode() + '_DESC' | translate")
            span(class="glyphicon glyphicon-record")
            span(ng-bind-html="getQuestionCode() + '_TITLE' | translate")

    div(ng-hide="getCondition() === false",ng-iteration="itLevel", ng-repeat="itLevel in getRepetitionMapByQuestionSet()")
        .repetition-question
            .repetition-question-title(ng-bind-html="getQuestionCode() + '_LOOPDESC' | translate", style="display : inline-block; margin-right : 20px")
            button.remove-button(ng-click="removeAnwser()",type="button") Supprimer
            .repetition-question-container
                ng-virtual(ng-transclude=true, class="element_stack")

    button.add-repetition-button(ng-click="addIteration()", type="button")
        span(ng-bind-html="'ADD_NEW_ITERATION' | translate",style="margin-right : 5px")
    span(ng-bind-html="getQuestionCode() + '_LOOPDESC' | translate")
