.loginBackground
    .loginFrame(ng-enter="send()")
        div(class="field_form")
            mm-awac-modal-field-text(ng-info="oldPasswordInfo")
            mm-awac-modal-field-text(ng-info="newPasswordInfo")
            mm-awac-modal-field-text(ng-info="newPasswordInfo_confirm")

        p(ng-show="errorMessage.length > 0",
        style="background-color:#ff0000;color:#ffffff;padding:15px") {{errorMessage}}

        button(
        type="button",
        class="btn btn-primary",
        ng-bind-html="'CHANGE_PASSWORD_BUTTON' | translate",
        ng-click="send()")

