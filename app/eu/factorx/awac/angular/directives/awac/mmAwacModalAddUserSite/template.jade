                    //    input(
                    //        type='checkbox',
                    //        name='{{employee.name}}',
                    //        value='{{employee.name}}',
                    //        ng-checked='selection.indexOf(employee.name) > -1',
                    //        ng-click='toggleSelection(employee.name)')

                    //label(ng-repeat="name in selection") {{name}}

            .modal-footer

                div(ng-hide="isLoading")
                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="close();",
                    ng-bind-html="'CANCEL_BUTTON' | translate")

                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="save();",
                    ng-disabled="!allFieldValid()",
                    ng-bind-html="'SAVE_BUTTON' | translate")

                img(ng-show="isLoading",src="/assets/images/modal-loading.gif")


