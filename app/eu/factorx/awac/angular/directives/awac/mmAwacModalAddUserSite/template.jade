// Modal
.modal(ng-enter="save()",ng-escape="close()")
    .modal-dialog
        .modal-content
            .modal-header
                button.button(type="button",ng-click="close()")
                    span(aria-hidden="true") &times;
                    span(class="sr-only", ng-bind-html="'CLOSE_BUTTON' | translate")
                h4(ng-show="createNewSite === true",class="modal-title",id="myModalLabel", ng-bind-html="'EDIT_SITE_TITLE_CREATE' | translate")
                h4(ng-hide="createNewSite === true",class="modal-title",id="myModalLabel", ng-bind-html="'EDIT_SITE_TITLE_EDIT' | translate")

            .modal-body
                //.field_form
                //    mm-awac-modal-field-text(ng-info="fields.name")
                //    mm-awac-modal-field-text(ng-info="fields.description")
                //    mm-awac-modal-field-text(ng-info="fields.nace")
                //    mm-awac-modal-field-text(ng-info="fields.orgStructure")
                //    mm-awac-modal-field-text(ng-info="fields.ecoInterest")
                //    mm-awac-modal-field-text(ng-info="fields.opePolicy")
                //    mm-awac-modal-field-text(ng-info="fields.accountingTreatment")
                //    mm-awac-modal-field-text(ng-info="fields.percentOwned")

                .field_form
                    table.document-manager-table
                        thead
                            tr
                                td  Users
                                td  Selected
                        tbody
                            tr(ng-repeat="employee in employees")
                                td  {{employee.name}}
                                td
                                    input(
                                        type='checkbox',
                                        name='{{employee.name}}',
                                        value='{{employee.name}}',
                                        ng-checked='selection.indexOf(employee.name) > -1',
                                        ng-click='toggleSelection(employee.name)')

                    table.document-manager-table
                        thead
                            tr
                                td  List
                        tbody
                            tr(ng-repeat="name in selection")
                                td {{name}}

                    //label(ng-repeat="employee in employees")
