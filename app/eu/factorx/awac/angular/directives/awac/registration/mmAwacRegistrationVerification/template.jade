div(class="field_form")
    mm-awac-modal-field-text(ng-info="fields.firstNameInfo")
    mm-awac-modal-field-text(ng-info="fields.lastNameInfo")
    mm-awac-modal-field-text(ng-info="fields.emailInfo")
    mm-awac-modal-field-text(ng-info="fields.identifierInfo")
    mm-awac-modal-field-text(ng-info="fields.passwordInfo")
    mm-awac-modal-field-text(ng-info="fields.passwordConfirmInfo").field_form_separator
    mm-awac-modal-field-text(ng-info="fields.organizationNameInfo").field_form_separator

    div(ng-hide="isLoading")

        button.button(
        type="button",
        class="btn btn-primary",
        ng-bind-html="'REGISTRATION_BUTTON' | translate",
        ng-click="registration()",
        ng-disabled="!allFieldValid()")

    img(ng-show="isLoading",src="/assets/images/modal-loading.gif")

