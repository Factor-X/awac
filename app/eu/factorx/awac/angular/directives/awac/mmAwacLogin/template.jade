ng-virtual

    .field
        label Username
        input(
        type="text",
        ng-model="login",
        required=true)

    .field
        label Password
        input(
        type="password",
        ng-model="password",
        required=true)

    p(ng-show="errorMessage.length > 0", style="background-color:#ff0000;color:#ffffff;padding:15px")
        | {{errorMessage}}

    button(
    type="button",
    class="btn btn-primary",
    ng-click="send()")
        | Login
