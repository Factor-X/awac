span.twoelement
    input(  type="text",
            ng-model="getAnswer().value",
            name="{{ getQuestionCode() }}",
            numbers-only="double",
            style="text-align:right;",
            ng-disabled="getDataToCompare()==true || getIsAggregation()===true")
    select( ng-options="p.code as p.name for p in getUnits()",
            ng-model="getAnswer().unitCode",
            name="{{ getQuestionCode() }}_UNIT",
            ng-disabled="getDataToCompare()==true || getIsAggregation()===true")