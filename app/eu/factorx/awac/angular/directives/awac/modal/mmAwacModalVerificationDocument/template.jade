// Modal
.modal(ng-enter="save(true)",ng-escape="close()")
    .modal-dialog
        .modal-content
            .modal-header
                button.button(type="button",ng-click="close()")
                    span(aria-hidden="true") &times;
                    span(class="sr-only", ng-bind-html="'CLOSE_BUTTON' | translate")
                h4(class="modal-title",id="myModalLabel", ng-bind-html="'VALID_REQUEST' | translate")

            .modal-body
                .desc(ng-bind-html="'VALID_REQUEST_DESC' | translate")
                .field_form
                    .field_row
                        .field_cell
                            div
                        .field_cell
                            button.button(
                            type="button",
                            ng-bind-html="'DOWNLOAD_VERIFICATION_REPORT' | translate",
                            ng-click="download()")
                    mm-awac-modal-field-text(ng-info="fields.myPassword")


            .modal-footer

                div(ng-hide="isLoading")
                    button.button(,
                    class="btn btn-primary",
                    ng-click="close();",
                    ng-bind-html="'CLOSE_BUTTON' | translate")

                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="save(true)",
                    ng-disabled="!allFieldValid()",
                    ng-bind-html="'VERIFICATION_CUSTOMER_CONFIRMATION_WINDOW_ACCEPT' | translate")

                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="save(false)",
                    ng-disabled="!allFieldValid()",
                    ng-bind-html="'VERIFICATION_CUSTOMER_CONFIRMATION_WINDOW_REJECT' | translate")

                img(ng-show="isLoading",src="/assets/images/modal-loading.gif")


