// Modal
.modal(ng-enter="save()",ng-escape="close()")
    .modal-dialog
        .modal-content
            .modal-header
                button.button(type="button",ng-click="close()")
                    span(aria-hidden="true") &times;
                    span(class="sr-only", ng-bind-html="'CLOSE_BUTTON' | translate")
                h4(class="modal-title", ng-bind-html="getParams().title | translate")

            .modal-body
                .desc(ng-bind-html="getParams().message | translate")

            .modal-footer
                div(ng-hide="isLoading")
                    button.button(type="button", class="btn btn-primary", ng-click="confirm();", ng-bind-html="'CONFIRM_BUTTON' | translate")
                    button.button(type="button", class="btn btn-primary", ng-click="close();", ng-bind-html="'CANCEL_BUTTON' | translate")

                img(ng-show="isLoading",src="/assets/images/modal-loading.gif")
