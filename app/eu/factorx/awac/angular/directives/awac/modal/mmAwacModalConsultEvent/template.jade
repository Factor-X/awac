// Modal
.modal(ng-enter="save()",ng-escape="close()")
    .modal-dialog
        .modal-content
            .modal-header
                button.button(type="button",ng-click="close()")
                    span(aria-hidden="true") &times;
                    span(class="sr-only", ng-bind-html="'CLOSE_BUTTON' | translate")
                h4(class="modal-title",ng-bind-html="'ORGANIZATION_EVENT' | translate")
            .modal-body
                table.admin-table-import-bad.table(ng-table='tableParams',ng-show="events.length > 0 ")
                    tr(ng-repeat='event in $data')
                        td(data-title="'EVENT' | translateText", sortable="'name'")
                            | {{event.name}}
                        td(data-title="'SITE_MANAGER_EVENT_PERIOD'| translateText", sortable="'period.label'")
                            | {{event.period.label}}
                        td(data-title="'SITE_MANAGER_EVENT_DESCRIPTION'| translateText")
                            | {{event.description}}

            .modal-footer

                div(ng-hide="isLoading")
                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="close();",
                    ng-bind-html="'CLOSE_BUTTON' | translate")

                img(ng-show="isLoading",src="/assets/images/modal-loading.gif")

