// Modal
.modal(ng-enter="save()",ng-escape="close()")
    .modal-dialog
        .modal-content
            .modal-header
                button.button(type="button",ng-click="close()")
                    span(aria-hidden="true") &times;
                    span(class="sr-only", ng-bind-html="'CLOSE_BUTTON' | translate")

                h4(class="modal-title",id="myModalLabel",ng-bind-html="'MODAL_QUESTION_COMMENT_TITLE' | translate")

            .modal-body
                .field_form
                    textarea(class="question-comment-textarea",
                             ng-model="comment",
                             name="comment",
                             ng-disabled="getParams().canBeEdited === false",
                             focus-me="true",
                             ng-disabled="getParams().readOnly === true")
            .modal-footer
                div(ng-hide="getParams().readOnly === true")
                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="close();",
                    ng-bind-html="'CANCEL_BUTTON' | translate")

                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="save();",
                    ng-hide="getParams().canBeEdited === false"
                    ng-bind-html="'SAVE_BUTTON' | translate")

                div(ng-show="getParams().readOnly === true")
                    button.button(type="button",
                    class="btn btn-primary",
                    ng-click="close();",
                    ng-bind-html="'CLOSE_BUTTON' | translate")
