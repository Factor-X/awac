                div
                    div(style="text-decoration: underline") Electricité
                div
                    div Consommation d'électricité verte
                    .twoelements
                        .status.answer
                        input(type="text", ng-model="A('A23').value")
                        select(ng-options="p.id as p.name for p in U('A23')", ng-model="A('A23').unitId")
                        .user_icon XM
                div
                    div Consommation d'électricité grise
                    .twoelements
                        .status.answer
                        input(type="text", ng-model="A('A24').value")
