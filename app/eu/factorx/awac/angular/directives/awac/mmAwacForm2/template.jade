ng-virtual
    .element
        .element_header
            .title Consommation de combustibles
        .element_sidebar
            .block_status
                .lock_status.disable_status
                .answered_status
                .validate_status
        .element_content
            .element_table

                mm-awac-repetition-question(ng-object="o", question-code="A13", questions-to-add="A14")
                    mm-awac-select-question(ng-object="o", question-code="A14")


            //
                div
                    div Pièces documentaires liées aux consommations de combustible
                div(ng-repeat="v in A('A14')")
                    div
                    .oneelement
                        .status.answer
                        select(ng-options="p.key as p.labelFr for p in O('A14')", ng-model="v.value")
                        .user_icon XM
                    button(ng-click="removeAnwser(v)") Remove
                div
                    div
                    .oneelement
                        button(ng-click="addNewAnswer('A14')") Add

                div
                    div Combustion de combustible par les sources statiques des sites de l'entreprise

            .element_table(ng-repeat="ri in getRepetitionIndicesFor(['A16', 'A17'])")
                div
                    div Combustible
                    .oneelement
                        .status.answer
                        select(ng-options="p.key as p.labelFr for p in O('A16')", ng-model="getByCodeAndRepetitionIndex('A16', ri).value")
                        .user_icon XM
                div
                    div Quantité
                    .twoelements
                        .status.answer
                        input(type="text", ng-model="A('A17').value")
                        select(ng-options="p.id as p.name for p in U('A17')", ng-model="getByCodeAndRepetitionIndex('A17', ri).unitId")
                        .user_icon XM

    .horizontal_separator

    .element
        .element_header
            .title Electricité et vapeur achetées
        .element_sidebar
            .block_status
