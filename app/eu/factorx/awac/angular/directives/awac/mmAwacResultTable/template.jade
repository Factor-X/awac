ng-virtual
    table.indicators_table
        thead
            tr
                th
                th(colspan="4")
                    span.period-header(style="color: {{ ngModel.leftColor }}; border-bottom-color: {{ ngModel.leftColor }}") {{ngModel.leftPeriod}}
                th(colspan="4", ng-show="ngModel.rightPeriod!=null")
                    span.period-header(style="color: {{ ngModel.rightColor }}; border-bottom-color: {{ ngModel.rightColor }}") {{ngModel.rightPeriod}}

            tr
                th

                th.align-right.scope1(style="color: {{ ngModel.leftColor }}")
                    div
                        span.wrapped
                            span(ng-bind-html="'SCOPE_1' | translate")
                            span  (tCO2e)
                th.align-right.scope2(style="color: {{ ngModel.leftColor }}")
                    div
                        span.wrapped
                            span(ng-bind-html="'SCOPE_2' | translate")
                            span  (tCO2e)
                th.align-right.scope3(style="color: {{ ngModel.leftColor }}")
                    div
                        span.wrapped
                            span(ng-bind-html="'SCOPE_3' | translate")
                            span  (tCO2e)
                th.align-right.out-of-scope(style="color: {{ ngModel.leftColor }}", ng-show="$root.instanceName == 'enterprise' || $root.instanceName == 'municipality'")
                    div
                        span.wrapped
                            span(ng-bind-html="'OUT_OF_SCOPE' | translate")
                            span  (tCO2)

                th.align-right.scope1(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    div
                        span.wrapped
                            span(ng-bind-html="'SCOPE_1' | translate")
                            span  (tCO2e)
                th.align-right.scope2(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    div
                        span.wrapped
                            span(ng-bind-html="'SCOPE_2' | translate")
                            span  (tCO2e)
                th.align-right.scope3(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    div
                        span.wrapped
                            span(ng-bind-html="'SCOPE_3' | translate")
                            span  (tCO2e)
                th.align-right.out-of-scope(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}", ng-show="$root.instanceName == 'enterprise' || $root.instanceName == 'municipality'")
                    div
                        span.wrapped
                            span(ng-bind-html="'OUT_OF_SCOPE' | translate")
                            span  (tCO2)


        tbody
            tr(ng-repeat="rl in ngModel.reportLines | orderBy:'order'", ng-show="showAll || (rl.leftScope1Value + rl.leftScope2Value + rl.leftScope3Value + rl.leftOutOfScopeValue + rl.rightScope1Value + rl.rightScope2Value + rl.rightScope3Value + rl.rightOutOfScopeValue > 0)")
                td
                    span(ng-bind-html="rl.indicatorName | translate")

                td.align-right.scope1(style="color: {{ ngModel.leftColor }}")
                    span(ng-bind-html="rl.leftScope1Value | numberToI18NOrLess", ng-show="rl.leftScope1Value > 0")
                td.align-right.scope2(style="color: {{ ngModel.leftColor }}")
                    span(ng-bind-html="rl.leftScope2Value | numberToI18NOrLess", ng-show="rl.leftScope2Value > 0")
                td.align-right.scope3(style="color: {{ ngModel.leftColor }}")
                    span(ng-bind-html="rl.leftScope3Value | numberToI18NOrLess", ng-show="rl.leftScope3Value > 0")
                td.align-right.out-of-scope(style="color: {{ ngModel.leftColor }}", ng-show="$root.instanceName == 'enterprise' || $root.instanceName == 'municipality'")
                    span(ng-bind-html="rl.leftOutOfScopeValue | numberToI18NOrLess", ng-show="rl.leftOutOfScopeValue > 0")

                td.align-right.scope1(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="rl.rightScope1Value | numberToI18NOrLess", ng-show="rl.rightScope1Value > 0")
                td.align-right.scope2(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="rl.rightScope2Value | numberToI18NOrLess", ng-show="rl.rightScope2Value > 0")
                td.align-right.scope3(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="rl.rightScope3Value | numberToI18NOrLess", ng-show="rl.rightScope3Value > 0")
                td.align-right.out-of-scope(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}", ng-show="$root.instanceName == 'enterprise' || $root.instanceName == 'municipality'")
                    span(ng-bind-html="rl.rightOutOfScopeValue | numberToI18NOrLess", ng-show="rl.rightOutOfScopeValue > 0")

        tfoot
            tr
                td(style="text-align: right")
                    span(ng-bind-html="'RESULTS_TOTAL' | translate")
                td.align-right.scope1(style="color: {{ ngModel.leftColor }}")
                    span(ng-bind-html="getLeftTotalScope1() | numberToI18NOrLess")
                td.align-right.scope2(style="color: {{ ngModel.leftColor }}")
                    span(ng-bind-html="getLeftTotalScope2() | numberToI18NOrLess")
                td.align-right.scope3(style="color: {{ ngModel.leftColor }}")
                    span(ng-bind-html="getLeftTotalScope3() | numberToI18NOrLess")
                td.align-right.out-of-scope(style="color: {{ ngModel.leftColor }}", ng-show="$root.instanceName == 'enterprise' || $root.instanceName == 'municipality'")
                    span(ng-bind-html="getLeftTotalOutOfScope() | numberToI18NOrLess")

                td.align-right.scope1(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="getRightTotalScope1() | numberToI18NOrLess")
                td.align-right.scope2(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="getRightTotalScope2() | numberToI18NOrLess")
                td.align-right.scope3(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="getRightTotalScope3() | numberToI18NOrLess")
                td.align-right.out-of-scope(ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span(ng-bind-html="getRightTotalOutOfScope() | numberToI18NOrLess", ng-show="$root.instanceName == 'enterprise' || $root.instanceName == 'municipality'")
            tr
                td
                td.align-right.scope1(colspan="4", style="color: {{ ngModel.leftColor }}")
                    span.period-footer(style="color: {{ ngModel.leftColor }}; border-top-color: {{ ngModel.leftColor }}")
                td.align-right.scope1(colspan="4", ng-show="ngModel.rightPeriod!=null", style="color: {{ ngModel.rightColor }}")
                    span.period-footer(style="color: {{ ngModel.rightColor }}; border-top-color: {{ ngModel.rightColor }}")

    div
        input(type="checkbox", ng-model="showAll")
        label
            span(ng-bind-html="'SHOW_ALL_INDICATORS' | translate")
