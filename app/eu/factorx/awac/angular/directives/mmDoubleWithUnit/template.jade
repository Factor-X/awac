.question
    label(ng-bind-html='getLabelCode() | translate')
    input(type='text', style='text-align: right;', ng-model='ngModel.value')
    ui-select(ng-model='ngModel.unit', theme='select2', style='min-width: 150px;')
        match(placeholder='Select a value...') {{ ngModel.unit.value }}
        choices(repeat='u in ngModel.units | filter: $select.search')
            span(ng-bind-html='u.value')
    span.label.label-info(ng-show='ngModel.owner != null') {{ ngModel.owner }}
    span.label.label-success(ng-show='ngModel.validator != null') {{ ngModel.validator }}
    span.label.label-danger(ng-show='ngModel.verifier != null') {{ ngModel.verifier }}
