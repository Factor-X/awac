# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @eu.factorx.awac.controllers.Application.index()

GET     /dummy/household/:year      eu.factorx.awac.controllers.Dummy.getHousehold(year:Integer)
GET     /translations/:lang         eu.factorx.awac.controllers.Translation.fetch(lang:String)
GET     /app.js                     eu.factorx.awac.controllers.Application.app()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
