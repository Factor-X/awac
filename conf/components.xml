<beans xmlns="http://www.springframework.org/schema/beans"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xmlns:context="http://www.springframework.org/schema/context"
     xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
             http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:component-scan base-package="eu.factorx.awac.controllers,eu.factorx.awac.service,eu.factorx.awac.converter,eu.factorx.awac.util.jxl"/>


    <bean id="conversionService" class="org.springframework.context.support.ConversionServiceFactoryBean">
        <property name="converters">
            <set>
                <bean  class="eu.factorx.awac.converter.AccountToMyselfDTOConverter" />
                <bean  class="eu.factorx.awac.converter.AccountToPersonDTOConverter" />
                <bean  class="eu.factorx.awac.converter.ProductToProductDTOConverter" />
            </set>
        </property>
    </bean>


